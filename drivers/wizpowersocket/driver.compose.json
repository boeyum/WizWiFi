{
  "name": {
    "en": "WizPowerSocket"
  },
  "class": "socket",
  "capabilities": [
    "measure_power",
    "onoff"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "min": 0,
      "max": 2300,
      "step": 1
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "pair": [
    {
      "id": "enter_ip"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": { "next": "add_devices" }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  }
}